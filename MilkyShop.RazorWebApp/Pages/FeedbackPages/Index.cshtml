@page
@model MilkyShop.RazorWebApp.Pages.FeedbackPages.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Rated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].OrderItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderItem.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
