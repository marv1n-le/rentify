@page
@model MilkyShop.RazorWebApp.Pages.ProductPages.CreateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.BrandId" class="control-label"></label>
                <select asp-for="Product.BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Id" class="control-label"></label>
                <input asp-for="Product.Id" class="form-control" />
                <span asp-validation-for="Product.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CreatedBy" class="control-label"></label>
                <input asp-for="Product.CreatedBy" class="form-control" />
                <span asp-validation-for="Product.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UpdatedBy" class="control-label"></label>
                <input asp-for="Product.UpdatedBy" class="form-control" />
                <span asp-validation-for="Product.UpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CreatedAt" class="control-label"></label>
                <input asp-for="Product.CreatedAt" class="form-control" />
                <span asp-validation-for="Product.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UpdatedAt" class="control-label"></label>
                <input asp-for="Product.UpdatedAt" class="form-control" />
                <span asp-validation-for="Product.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Product.IsDeleted" /> @Html.DisplayNameFor(model => model.Product.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
