@page
@model Rentify.RazorWebApp.Pages.Admin.Rentals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- UserId field removed -->
            <div class="form-group">
                <label asp-for="Rental.RentalDate" class="control-label"></label>
                <input asp-for="Rental.RentalDate" class="form-control" />
                <span asp-validation-for="Rental.RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.ReturnDate" class="control-label"></label>
                <input asp-for="Rental.ReturnDate" class="form-control" />
                <span asp-validation-for="Rental.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.TotalAmount" class="control-label"></label>
                <input asp-for="Rental.TotalAmount" class="form-control" />
                <span asp-validation-for="Rental.TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.Status" class="control-label"></label>
                <select asp-for="Rental.Status" class="form-control" asp-items="Model.StatusList"></select>
                <span asp-validation-for="Rental.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.PaymentStatus" class="control-label"></label>
                <select asp-for="Rental.PaymentStatus" class="form-control" asp-items="Model.PaymentStatusList"></select>
                <span asp-validation-for="Rental.PaymentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}