@model Rentify.BusinessObjects.Entities.Post

<div class="card mb-4 shadow-sm" style="max-width: 600px; margin: auto;">
    <div class="card-body">
        <!-- User -->
        <div class="d-flex align-items-center mb-3">
            <img src="https://via.placeholder.com/40" alt="User avatar" class="rounded-circle me-2" />
            <div>
                <strong>@Model.User.FullName</strong><br />
                <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy")</small>
            </div>
        </div>

        <!-- Title -->
        <h5 class="card-title">@Model.Title</h5>

        <!-- Content -->
        <div id="content-@Model.Id" class="post-content">
            @Model.Content
        </div>
        <a href="javascript:void(0)" id="showmore-@Model.Id" class="show-more-link" onclick="toggleContent('@Model.Id')">
            Hiển thị thêm
        </a>

        <!-- Images -->
        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="mt-3">
                @foreach (var img in Model.Images)
                {
                    <img src="@img" alt="Post image" class="rounded mb-2 me-2" style="width:50px; height:50px; object-fit:cover;" />
                }
            </div>
        }

        <!-- Tags -->
        @if (Model.Tags != null && Model.Tags.Any())
        {
            <p class="text-muted mt-2">
                @foreach (var tag in Model.Tags)
                {
                    <span>#@tag </span>
                }
            </p>
        }
    </div>
</div>
