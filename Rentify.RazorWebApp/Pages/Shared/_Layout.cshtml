<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rentify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Thêm Font Awesome cho icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Cải thiện brand với icon -->
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="fas fa-home me-2"></i>Rentify
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <!-- Thêm menu cho user đã đăng nhập -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Items/Index">
                                    <i class="fas fa-box me-1"></i>Sản phẩm
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/CategoryPages/Index">
                                    <i class="fas fa-box me-1"></i>Loại
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/ChatPages/Chat">
                                    <i class="fas fa-comments me-1"></i>Chat
                                </a>
                            </li>
                        }
                    </ul>
                    <!-- Cải thiện authentication menu với icons và styling -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span>@(Context.Request.Cookies["UserName"] ?? User.Identity.Name)</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/Admin/Dashboard">
                                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard Admin
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/CategoryPages/Index">
                                                <i class="fas fa-tachometer-alt me-2"></i>Category
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a class="dropdown-item" asp-page="/Account/Profile">
                                            <i class="fas fa-user me-2"></i>Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-page="/Account/Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2 px-3" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus me-1"></i>Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Rentify - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Added SignalR script for chat functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
